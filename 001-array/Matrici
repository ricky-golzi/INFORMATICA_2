// scrittura delle funzioni

void caricaRandom (int v[])
{
	int i,a;
	
	srand(time(NULL));
	
	for(i=0;i<D;i++)
	{
		a=rand()%19+1;
		v[i]=a;
	}
	
}

void caricaManuale (int v[])
{
	int i,a;
	
	printf("\n inserire venti numeri\n");
	for(i=0;i<D;i++)
	
	{
		scanf("%d",&a);
		v[i]=a;
	}
}

